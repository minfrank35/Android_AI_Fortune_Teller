<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.supermin.ai_fortune_teller">
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/ai_fortune_teller_app_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/round_app_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.AI_FORTUNE_TELLER"
        tools:targetApi="31">
        <activity
            android:name=".view.menu.MenuActivity"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name=".view.login.LoginActivity"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name=".view.signup.SignUpActivity"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name=".view.setting.SettingActivity"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name=".view.alarm.AlarmActivity"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name=".view.intro.MainActivity"
            android:screenOrientation="portrait"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.AI_FORTUNE_TELLER">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>